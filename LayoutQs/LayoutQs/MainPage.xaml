                Margin="16,8"
                BackgroundColor="Azure"
                Text="1234ddddddddddd56789" />

        </ContentView>
        <Label
            BackgroundColor="Pink"
            VerticalOptions="Center"
            Text="9876ddddddddddddd54321" />
        <StackLayout
            BackgroundColor="Yellow">
            <Label
                Margin="16,8"
                BackgroundColor="Azure"
                Text="12345dddddddd6789" />
